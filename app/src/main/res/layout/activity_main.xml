<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/ic_background">


    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:background="@drawable/edittext_underline"
        android:hint="Enter phone number"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:paddingHorizontal="12dp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_contact"
        android:drawablePadding="16dp"
        />

    <EditText
        android:id="@+id/editTextMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:background="@drawable/edittext_underline"
        android:hint="Enter your message"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:paddingHorizontal="12dp"
        android:layout_below="@+id/editTextPhone"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_msg"
        android:drawablePadding="16dp"
        />

    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:hint="00:00"
        android:textColorHint="#F8F6FA"
        android:textSize="18dp"
        android:textColor="#F6F6F6"
        android:layout_below="@+id/editTextMsg"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        />

    <Button
        android:id="@+id/timeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_time"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/timeText"
        android:text="Set Time"
        android:gravity="center"
        android:background="@drawable/rounded_button2"
        android:paddingVertical="4dp"
        android:paddingHorizontal="12dp"
        android:drawablePadding="8dp"
        />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:drawableRight="@drawable/ic_baseline_send_24"
        android:text="Send"
        android:textColor="#0C0B0C"
        android:drawablePadding="4dp"
        android:layout_below="@+id/timeButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_button"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:drawableRight="@drawable/ic_baseline_cancel"
        android:text="Cancel"
        android:textColor="#090809"
        android:drawablePadding="4dp"
        android:layout_below="@+id/sendButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"
        android:textStyle="bold"
        />

</RelativeLayout>